{% extends 'AppBundle::panel_layout.html.twig' %}

{% block panel_body %}
    <h1>Edition d'un utilisateur : {{ user.firstname }} {{ user.lastname }}</h1>

    <a class="btn btn-primary" href="{{ path('user_index') }}">Retour à la liste des utilisateurs</a>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-primary" type="submit" value="Editer" />
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Supprimer">
    {{ form_end(delete_form) }}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('vendor/chosen/chosen.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('vendor/chosen/chosen-bootstrap.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/chosen/chosen.jquery.min.js') }}" type="text/javascript"></script>

    <script type="text/javascript">
        $(function() {
            $(".chosen-select-ue").chosen({
                'placeholder_text_multiple' : "Sélectionner un ou plusieurs UE",
                'no_results_text' : "Oops, aucun UE trouvé!",
            });
        });
    </script>
{% endblock %}

