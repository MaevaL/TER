{% extends 'AppBundle::panel_layout.html.twig' %}

{% block panel_body %}

    <div class="row">
        <div class="col-md-12">
            <h1>Utilisateur : {{ user.firstname }} {{ user.lastname }}</h1>

            <a class="btn btn-primary" href="{{ path('user_index') }}">Retour à la liste des utilisateurs</a>

            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Numéro Etudiant</th>
                    <td>{{ user.numEtu }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>
                        {% for role in user.roles %}
                            {% if role == "ROLE_SUPER_ADMIN" %}
                                Super Utilisateur
                            {% else %}
                                {% if role == "ROLE_ADMIN" %}
                                        Professeur
                                {% else %}
                                    {% if role == "ROLE_USER" %}
                                        Etudiant
                                    {% endif %}
                                {% endif %}
                            {% endif %}

                            {% if loop.index != loop.last %}
                                 |
                            {% endif %}

                        {% endfor %}
                    </td>
                </tr>

                </tbody>
            </table>

                <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Editer</a>
                {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
