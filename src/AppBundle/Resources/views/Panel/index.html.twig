{% extends "AppBundle::panel_layout.html.twig" %}

{% block panel_body %}

	<div class="showback">
		<div class="row">
			<div class="col-lg-12">
				<h3><i class="fa fa-angle-right"></i> Bonjour {{ app.user.lastname }} {{ app.user.firstname }},</h3>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<table class="table table-hover">
					<thead>
					<tr>
						<th>Date</th>
						<th>UE</th>
						<th>Intilut√©</th>
						<th>Note</th>
					</tr>
					</thead>
					<tbody>
                    {% for grade in grades %}
						<tr>
							<td>{{ grade.date|date('d/m/Y | H:i') }}</td>
							<td>{{ grade.ue.name }}</td>
							<td>{{ grade.intitule }}</td>
							<td>{{ grade.grade }}</td>
						</tr>
                    {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}