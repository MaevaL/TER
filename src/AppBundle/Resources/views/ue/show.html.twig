{% extends "::base.html.twig" %}

{% block body %}
    <div class="showback">

        <div class="row">
            <div class="col-lg-12">
                <h3><i class="fa fa-angle-right"></i> UE : {{ uE.name }}</h3>
            </div>
        </div>

        <br>
        <div class="row">
            <div class="col-lg-6">
                <a class="btn btn-theme-amu" href="{{ path('ue_index') }}"><i class="fa fa-caret-left" aria-hidden="true"></i> Retour à la liste des UEs</a>
            </div>

            <div class="col-lg-6 text-right">
                {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ uE.name }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ uE.slug }}</td>
                    </tr>
                    <tr>
                        <th>Crédits</th>
                        <td>{{ uE.credits }}</td>
                    </tr>
                    <tr>
                        <th>Promotion</th>
                        <td>[{{ uE.promotion.code }}] {{ uE.promotion.name }}</td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <a class="btn btn-success" href="{{ path('ue_edit', { 'id': uE.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i> Editer</a>
            </div>
        </div>

    </div>
{% endblock %}
