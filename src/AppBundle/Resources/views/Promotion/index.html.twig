{% extends 'AppBundle::panel_layout.html.twig' %}

{% block panel_body %}
    <div class="showback">
        <div class="row">
            <div class="col-lg-12">
                <h3><i class="fa fa-angle-right"></i> Liste des promotions</h3>
            </div>
        </div>

        <br>
        <div class="row">
            <div class="col-lg-12">
                <a class="btn btn-success" href="{{ path('promotion_new') }}"><i class="fa fa-user-plus" aria-hidden="true"></i> Ajouter une promotion</a>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-lg-12">
                <table id="admin-promotion-table" class="table table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Code</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for promotion in promotions %}
                        <tr>
                            <td>{{ promotion.name }}</td>
                            <td>{{ promotion.slug }}</td>
                            <td>{{ promotion.code }}</td>
                            <td>
                                <a class="btn btn-theme-amu" href="{{ path('promotion_show', { 'id': promotion.id }) }}"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
                                <a class="btn btn-success" href="{{ path('promotion_edit', { 'id': promotion.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            $('#admin-promotion-table').DataTable({
                "columnDefs": [ {
                    "targets": 3,
                    "orderable": false
                } ],
                "language": {
                    "url": "{{ asset('vendor/dataTables/media/lang/French.json') }}"
                }
            });
        });
    </script>
{% endblock %}
