{% extends "::base.html.twig" %}

{% block body %}
    <div class="showback">

        <div class="row">
            <div class="col-lg-12">
                <h3><i class="fa fa-angle-right"></i> Edition d'une promotion : {{ promotion.name }}</h3>
            </div>
        </div>

        <br>
        <div class="row">
            <div class="col-lg-6">
                <a class="btn btn-theme-amu" href="{{ path('promotion_index') }}"><i class="fa fa-caret-left" aria-hidden="true"></i> Retour Ã  la liste des promotions</a>
            </div>

            <div class="col-lg-6 text-right">
                {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-lg-12">
                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <button class="btn btn-success" type="submit"><i class="fa fa-check" aria-hidden="true"></i> Editer</button>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
